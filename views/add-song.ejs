<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DailySong.io - Şarkı Ekle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: bold;
        }

        .navbar-custom {
            background-color: #3e0bb5;
        }

        /* Normal (light mode) */
        .custom-card-header {
            background-color: black;
        }

        /* Dark mode aktifken */
        body.dark-mode .custom-card-header {
            background-color: #333;
            /* veya #1e1e1e */
        }

        /* Dark mode genel */
        body.dark-mode {
            background-color: #121212;
            color: #f1f1f1;
        }


        /* Kartlar */
        body.dark-mode .card {
            background-color: #1e1e1e;
            border-color: #333;
        }

        /* Başlık ve yazılar */
        body.dark-mode h1,
        body.dark-mode h5,
        body.dark-mode h6 {
            color: #f1f1f1;
        }

        body.dark-mode .text-muted {
            color: #bbb !important;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <a style="font-size: 24px;" class="navbar-brand" href="/">
                <i class="fas fa-music me-2"></i>DailySong.io
            </a>

            <!-- Linkler -->
            <div class="navbar-nav me-auto">
                <a style="font-weight: bold; color:rgb(204, 203, 203);" class="nav-link" href="/">Ana Sayfa</a>
                <a style="font-weight: bold; color:rgb(204, 203, 203);" class="nav-link" href="/add-song">Şarkı Ekle</a>
                <a style="font-weight: bold; color:rgb(204, 203, 203);" class="nav-link" href="/archive">Arşiv</a>
            </div>

            <!-- Sağ tarafa buton -->
            <div class="d-flex ms-auto">
                <button id="darkModeToggle" class="btn btn-outline-light">
                    <i class="fas fa-moon"></i>
                </button>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-white custom-card-header">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-plus me-2"></i>Yeni Şarkı Ekle
                        </h3>
                    </div>

                    <div class="card-body">
                        <% if (error) { %>
                            <div class="alert alert-danger">
                                <%= error %>
                            </div>
                            <% } %>

                                <form method="POST" action="/add-song">
                                    <div class="mb-3">
                                        <label for="addedBy" class="form-label">Adınız *</label>
                                        <input type="text" class="form-control" id="addedBy" name="addedBy" required
                                            maxlength="50">
                                    </div>

                                    <div class="mb-3">
                                        <label for="title" class="form-label">Şarkı Adı *</label>
                                        <input type="text" class="form-control" id="title" name="title" required
                                            maxlength="100">
                                    </div>

                                    <div class="mb-3">
                                        <label for="artist" class="form-label">Sanatçı *</label>
                                        <input type="text" class="form-control" id="artist" name="artist" required
                                            maxlength="100">
                                    </div>

                                    <div class="mb-3">
                                        <label for="spotifyUrl" class="form-label">Spotify Linki</label>
                                        <input type="url" class="form-control" id="spotifyUrl" name="spotifyUrl"
                                            placeholder="https://open.spotify.com/...">
                                    </div>

                                    <div class="mb-3">
                                        <label for="youtubeUrl" class="form-label">YouTube Linki</label>
                                        <input type="url" class="form-control" id="youtubeUrl" name="youtubeUrl"
                                            placeholder="https://www.youtube.com/...">
                                    </div>

                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle me-1"></i>
                                        <strong>Not:</strong> Her gün sadece bir şarkı ekleyebilirsiniz!
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-lg"
                                            style="background-color: #3e0bb5; color: white;">
                                            <i class="fas fa-plus me-2"></i>Şarkı Ekle
                                        </button>
                                        <a href="/" class="btn btn-secondary">
                                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                                        </a>
                                    </div>
                                </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const toggleBtn = document.getElementById("darkModeToggle");
        const body = document.body;

        // LocalStorage’dan daha önce seçilmiş tema varsa yükle
        if (localStorage.getItem("theme") === "dark") {
            body.classList.add("dark-mode");
        }

        toggleBtn.addEventListener("click", () => {
            body.classList.toggle("dark-mode");

            // Kullanıcının seçimini kaydet
            if (body.classList.contains("dark-mode")) {
                localStorage.setItem("theme", "dark");
            } else {
                localStorage.setItem("theme", "light");
            }
        });
    </script>
</body>

</html>