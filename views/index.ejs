<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DailySong.io - Ana Sayfa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .song-card {
            transition: transform 0.2s;
            border-left: 4px solid #007bff;
        }

        .song-card:hover {
            transform: translateY(-2px);
        }

        .vote-btn {
            border-radius: 20px;
            min-width: 80px;
        }

        .winner-card {
            border-left-color: #ffc107 !important;
        }

        .navbar-brand {
            font-weight: bold;
        }

        .navbar-custom {
            background-color: #3e0bb5;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <a style="font-size: 24px;" class="navbar-brand" href="/">
                <i class="fas fa-music me-2"></i>DailySong.io
            </a>
            <div class="navbar-nav me-auto">
                <a style="font-weight: bold; color:rgb(204, 203, 203);" class="nav-link" href="/">Ana Sayfa</a>
                <a style="font-weight: bold; color:rgb(204, 203, 203);" class="nav-link" href="/add-song">Şarkı Ekle</a>
                <a style="font-weight: bold; color:rgb(204, 203, 203);" class="nav-link" href="/archive">Arşiv</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-4">
        <div class="row">
            <div class="col-12">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="display-4">
                            <i class="fas fa-trophy text-warning me-2"></i>
                            Bu Haftanın Şarkıları
                        </h1>
                        <% if (currentWeek) { %>
                            <p class="text-muted"> Her gün yeni şarkılar
                                ekleniyor sende ekle listede yerini kap!</p>
                            <% } %>
                    </div>
                    <a href="/add-song" class="btn btn-success btn-lg">
                        <i class="fas fa-plus me-2"></i>Şarkı Ekle
                    </a>
                </div>

                <!-- Alert Messages -->
                <% if (message) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= message %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>

                        <!-- Songs List -->
                        <% if (songs.length===0) { %>
                            <div class="text-center py-5">
                                <i class="fas fa-music fa-3x text-muted mb-3"></i>
                                <h3 class="text-muted">Bugün henüz şarkı eklenmemiş</h3>
                                <p class="text-muted">Bugünün ilk şarkısını sen ekle!</p>
                                <a href="/add-song" class="btn btn-primary">Şarkı Ekle</a>
                            </div>
                            <% } else { %>
                                <div class="row">
                                    <% songs.forEach((song, index)=> { %>
                                        <div class="col-md-6 col-lg-4 mb-4">
                                            <div class="card song-card h-100 <%= index === 0 ? 'winner-card' : '' %>">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <div class="d-flex align-items-center mb-3">
                                                            <span class="badge bg-primary me-2">#<%= index + 1 %></span>
                                                            <p class="text-muted mb-0 d-flex align-items-center">
                                                                <i class="fas fa-user me-1"></i>
                                                                <small>
                                                                    <%= song.added_by %>
                                                                </small>
                                                            </p>
                                                        </div>
                                                        <% if (index===0) { %>
                                                            <p class="fas fa-crown text-warning"></p>
                                                            <% } %>

                                                    </div>


                                                    <h5 class="card-title text-primary">
                                                        <%= song.title %>
                                                    </h5>
                                                    <h6 class="card-subtitle mb-2 text-muted">
                                                        <%= song.artist %>
                                                    </h6>



                                                    <!-- Music Links -->
                                                    <div class="mb-3">
                                                        <% if (song.spotify_url) { %>
                                                            <a href="<%= song.spotify_url %>" target="_blank"
                                                                class="btn btn-sm btn-success me-2">
                                                                <i class="fab fa-spotify"></i> Spotify
                                                            </a>
                                                            <% } %>
                                                                <% if (song.youtube_url) { %>
                                                                    <a href="<%= song.youtube_url %>" target="_blank"
                                                                        class="btn btn-sm btn-danger">
                                                                        <i class="fab fa-youtube"></i> YouTube
                                                                    </a>
                                                                    <% } %>
                                                    </div>

                                                    <!-- Vote Button -->
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <button data-id="<%= song.id %>"
                                                            class="btn btn-outline-primary vote-btn">
                                                            <i class="fas fa-thumbs-up me-1"></i>
                                                            <span class="badge bg-primary">
                                                                <%= song.vote_count || song.votes %>
                                                            </span>
                                                        </button>
                                                        <small class="text-muted">
                                                            <%= new Date(song.created_at).toLocaleDateString('tr-TR') %>
                                                        </small>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                                <% } %>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Vote function
        function vote(songId) {
            fetch('/vote/' + songId, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Bir hata oluştu!');
                });
        }

        // Vote button event listener
        document.querySelectorAll('.vote-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.dataset.id;
                vote(id);
            });
        });
    </script>
</body>

</html>